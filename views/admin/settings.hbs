<div class="main"  onclick="$('.sidenav').hide();$('#divNavBar').show()" style="margin-top: 100px;">
    <div class=" bg-white mt-5" >
        <ul class="nav nav-tabs ml-2">
            <div class="row justify-content-start col-12 ">
                <div class="col-12">
                      <a style="width: 100px;" class="btn btn-sm  bg-dark text-light mt-1 mr-1   tabview" data-toggle="tab" onclick="vendor()">
                    <li class="text-light active" style="pointer-events: none;">Banned Vendors</li>
                </a>
                <a style="width: 100px;" class="btn btn-sm  bg-dark text-light mt-1 mr-1  tabview" data-toggle="tab" onclick="user()">
                    <li class="text-light" style="pointer-events: none;">Banned Users</li>
                </a>
                <a style="width: 100px;" class="btn btn-sm  bg-dark text-light mt-1 mr-1  tabview" data-toggle="tab" onclick="categoryManage()">
                    <li class="text-light" style="pointer-events: none;">Category Manage</li>
                </a>              
                </div>


            </div>

        </ul>
        <div>
            <div id="home" class="ml-2">
                <div class="section bg-white mt-5" style="background-color: white;height: 100%;">
                    <div class="mt-3">
                        <h4 class="ml-2">Banned vendor lists</h4>
                    </div>
                    <div class="table table-responsive">
                        <table style="width: 100%;">
                            <div class="row col-12">
                                <thead>
                                    <div class="col-12">
                                        <tr>
                                            <th>Dealer Address</th>
                                            <th>Dealer Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </div>
                                </thead>
                            </div>
                            <div class="row">
                                {{#each bannedvendors}}
                                <tbody>
                                    <div class="col-12">
                                        <tr>
                                            <td>{{this.address}}</td>
                                            <td>{{this.username}}</td>
                                            <td><a href="/admin/unban/?id={{this._id}}&username={{this.username}}&password={{this.password}}&address={{this.address}}&storename={{this.storename}}&extrainfo={{this.extrainfo}}&phonenumber={{this.phonenumber}}&opentime={{this.opentime}}&closetime={{this.closetime}}"
                                                    class="btn btn-dark mb-2">Un Ban</a></td>
                                        </tr>
                                    </div>
                                </tbody>
                                {{/each}}
                            </div>
                        </table>
                    </div>
                </div>
            </div>
            <div id="menu1">
                <div class="section bg-white mt-5" style="background-color: white;height: 100%;">
                    <div class="mt-3">
                        <h4 class="ml-2">Banned User lists</h4>
                    </div>
                    <div class="table table-responsive">
                        <table style="width: 100%;">
                            <div class="row col-12">
                                <thead>
                                    <div class="col-12">
                                        <tr>
                                            <th>User Name</th>
                                            <th>User Address</th>
                                            <th>User email</th>
                                            <th>Action</th>
                                        </tr>
                                    </div>
                                </thead>
                            </div>
                            <div class="row">
                                {{#each bannedusers}}
                                <tbody>
                                    <div class="col-12">
                                        <tr>
                                            <td>{{this.username}}</td>
                                            <td>{{this.address}}</td>
                                            <td>{{this.email}}</td>
                                            <td><a href="/admin/unban/{{this._id}}" class="btn btn-dark mb-2">Un Ban</a>
                                            </td>
                                        </tr>
                                    </div>
                                </tbody>
                                {{/each}}
                            </div>
                        </table>
                    </div>
                </div>
            </div>
            <div id="category" class="mb-5" style="height: 100%;background-color: white;">
                <div class="section bg-white mb-5" style="background-color: white">
                    <style>
                        .dot {
                            height: 95px;
                            width: 95px;
                            background-color: #bbb;
                            border-radius: 50%;
                            display: inline-block;
                        }
                    </style>
                    <div class="container">
                        <h1>New Category</h1>
                        <div class="section">
                            <form action="/admin/new-category" method="POST" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-8">
                                        <label for="">Category name</label>
                                        <input type="text" id="name" required name="name" class="form-control">
                                        <label for="">Description</label>
                                        <input type="description" id="description" required name="description"
                                            class="form-control">
                                    </div>
                                    <div class="col-4">
                                        <label for="">Profile photo</label><br>
                                        <img id="imageDisplay" src="" alt=""
                                            style="width: 95px;height: 95px;display: none;" class="rounded-circle">
                                        <span id="profilebtn" class="dot"></span><br>
                                        <input type="button" onclick="profileClick()" value="Add photo" id="addPhoto"
                                            class="btn btn-primary">
                                        <input onchange="loadFile(event)" required hidden name="Image" id="Image"
                                            type="file">
                                    </div>
                                    <button type="submit" class="btn btn-lg btn-primary ml-3">Create</button>
                                </div>
                            </form>
                        </div>
                        <div class="section bg-white mt-5" style="background-color: white;height: 100%;">
                            <div class="mt-3">
                                <h4 class="ml-2">Category lists</h4>
                            </div>
                            <div class="table table-responsive">
                                <table style="width: 100%;">
                                    <div class="row col-12">
                                        <thead>
                                            <div class="col-12">
                                                <tr>
                                                    <th>Category image</th>
                                                    <th>Category name</th>
                                                    <th>Description</th>
                                                    <th>Action</th>
                                                </tr>
                                            </div>
                                        </thead>
                                    </div>
                                    {{#each categories}}
                                    <tbody>
                                        <div class="col-12">
                                            <tr>
                                                <td><img style="height: 50px;" src="/category-images/{{this._id}}.jpg"
                                                        alt=""></td>
                                                <td>{{this.name}}</td>
                                                <td>{{this.description}}</td>
                                                <td><a href="/admin/edit-category/{{this._id}}"
                                                        class="btn btn-primary mb-2">Edit
                                                    </a>
                                                    <a href="/admin/delete-category/{{this._id}}"
                                                        class="btn btn-danger mb-2"
                                                        onclick="return confirm('Are you sure you need to delete {{this.name}} category from the mart ?')">Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        </div>
                                    </tbody>
                                    {{/each}}
                                </table>
                            </div>
                        </div>

                        <script>
                            var loadFile = function (event) {
                                var image = document.getElementById('imageDisplay');
                                image.src = URL.createObjectURL(event.target.files[0]);
                                document.getElementById('imageDisplay').style.display = "block";
                                document.getElementById('addPhoto').value = "Change photo";
                                $('#profilebtn').hide()
                            }
                            function profileClick() {
                                $('#Image').click()

                            }

                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('menu1').style.display = "none"
        document.getElementById('category').style.display = "none"


        function vendor() {
            document.getElementById('home').style.display = "block"
            document.getElementById('menu1').style.display = "none"

            document.getElementById('category').style.display = "none"
        }
        function user() {
            document.getElementById('menu1').style.display = "block"
            document.getElementById('home').style.display = "none"
            document.getElementById('category').style.display = "none"

        }
        function categoryManage() {
            document.getElementById('menu1').style.display = "none"
            document.getElementById('home').style.display = "none"
            document.getElementById('category').style.display = "block"

        }
    </script>