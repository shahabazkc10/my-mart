
<div class="container">
    <h1>Edit Category</h1>
    <div class="section">
        <form action="/admin/edit-category/{{this.categories._id}}" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-8">
                    <label for="">Category name</label>
                    <input type="text" id="name" value="{{this.categories.name}}" required name="name" class="form-control">
                    <label for="">Description</label>
                    <input type="text" id="description" value="{{this.categories.description}}" required name="description" class="form-control">
                </div>
                <div class="col-4">
                    <label for="">Profile photo</label><br>
                    <img id="imageDisplay"  src="/category-images/{{this.categories._id}}.jpg"  alt="" style="width: 105px;height: 105px;" class="rounded-circle mb-1"><br>
                    <input type="button" onclick="profileClick()" value="Change photo" id="addPhoto" class="btn btn-primary">
                    <input onchange="loadFile(event)" hidden name="Image" id="Image" type="file">
                </div>
                <button type="submit" class="btn btn-lg btn-primary ml-3 mt-2">Edit category</button>
            </div>
        </form>
    </div>
</div>
<script>
    var loadFile = function(event){
        var image = document.getElementById('imageDisplay');
        image.src = URL.createObjectURL(event.target.files[0]);
        document.getElementById('imageDisplay').style.display="block";
        document.getElementById('addPhoto').value="Change photo";
        $('#profilebtn').hide()
    }
    function profileClick() {
        $('#Image').click()

    }



</script>